# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        interval = 5
        colors = true
        output_format = "i3bar"

        color_good      = '#00bd00'
        color_degraded  = '#cfac00'
        color_bad       = '#ff0000'
}




# Icon stash :)
# 🖳 🖧 🖥 🖦 ᛒ 🌍 🌑 🌒


# ---------------------------------------------------------------
order += "cpu_usage"
cpu_usage {
        format = "%usage"
        # format_above_degraded_threshold = "🥳 %usage"
        format_above_threshold = "🥵 %usage"
        degraded_threshold = "40"
        max_threshold = "75"
}

# ---------------------------------------------------------------
# order += "load"
load {
        format = "%1min %5min %15min"
        max_threshold = "10"
}

# ---------------------------------------------------------------
order += "memory"
memory {
        format = "%percentage_used"
        threshold_degraded = "50%"
        threshold_critical = "10%"
}

# ---------------------------------------------------------------
order += "disk /"
disk "/" {
        format = "%avail"
        threshold_type = "gbytes_avail"
        low_threshold = 20
}

# ---------------------------------------------------------------
order += "bluetooth2"
bluetooth2 {
        format = "\?if=adapter {format_adapter}|\?color=darkgray No Adapter"
}

# ---------------------------------------------------------------
# order += "keyboard_locks"
keyboard_locks {
}

# ---------------------------------------------------------------
order += "volume master"
volume master {
        format = "🔊 %volume"
        format_muted = "🔈 MUTED (%volume)"
        device = "pulse"
}

# ---------------------------------------------------------------
order += "battery_level 0"
battery_level 0 {
        battery_id = all
        measurement_mode = sys
        notification = true
        notify_low_level = true
        sys_battery_path = "/sys/class/power_supply"
}

# ---------------------------------------------------------------
# order += "battery 1"
battery 1 {
	      last_full_capacity = true
        format = "<span background='#a3be8c'> %status %percentage </span>"
        format_down = "  No Battery"
        status_chr = "  Charging"
        status_bat = "  Battery"
        status_unk = "  Unknown"
        status_full = "  Charged"
        path = "/sys/class/power_supply/hidpp_battery_%d/uevent"
        low_threshold = 10
}

# ---------------------------------------------------------------
order += "networkmanager"
networkmanager {
        # format_device = "[\?if=general_connection {general_device}[\?soft ][\?color=ap_signal {ap_ssid} {ap_bars} {ap_signal}%][\?soft ][\?color=good {ip4_address1}]]"
        format_device = "[\?if=general_connection [\?soft ][\?color=ap_signal {ap_ssid} {ap_bars} {ap_signal}%][\?soft ][\?color=good {ip4_address1}]]"
}

# ---------------------------------------------------------------
order += "online_status"
online_status {
        format = "wlan"
        icon_off = "☎"
        icon_on = "☎"
}

# ---------------------------------------------------------------
order += "vpn_status"
vpn_status {
      format = "vpn"
      check_pid = true
      pidfile = "/sys/class/net/tun0/dev_id"
}

# ---------------------------------------------------------------
order += "apt_updates"
apt_updates {
        format = "apt[\?not_zero : {apt} UPDATES]"
}

# ---------------------------------------------------------------
order += "my_weather_owm"
my_weather_owm {
  api_key = "my-openweathermap-org-api-key"
  format = "{icon} {temperature} {humidity}[ {rain}]"
  format_temperature = "[\?color=all {current:.0f}°{unit}]"
  format_humidity = "{humidity}%"
  unit_temperature = "c"
  unit_rain = "mm"
}

# ---------------------------------------------------------------
order += "tztime local"
tztime local {
        format = "%Y%m%d %H%M"
}
