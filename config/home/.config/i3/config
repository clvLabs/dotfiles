# Volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume $(pactl info|grep -oP "(?<=Default Sink: ).*") +10% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume $(pactl info|grep -oP "(?<=Default Sink: ).*") -10% #decrease sound volume
bindsym Ctrl+XF86AudioRaiseVolume exec --no-startup-id pactl -- set-sink-volume $(pactl info|grep -oP "(?<=Default Sink: ).*") +1% #increase sound volume
bindsym Ctrl+XF86AudioLowerVolume exec --no-startup-id pactl -- set-sink-volume $(pactl info|grep -oP "(?<=Default Sink: ).*") -1% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $(pactl info|grep -oP "(?<=Default Sink: ).*") toggle # mute sound

bindsym $mod+F10 exec --no-startup-id pactl set-sink-mute $(pactl info|grep -oP "(?<=Default Sink: ).*") toggle # mute sound
bindsym $mod+F11 exec --no-startup-id pactl -- set-sink-volume $(pactl info|grep -oP "(?<=Default Sink: ).*") -10% #increase sound volume
bindsym $mod+F12 exec --no-startup-id pactl -- set-sink-volume $(pactl info|grep -oP "(?<=Default Sink: ).*") +10% #increase sound volume

