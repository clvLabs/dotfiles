# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!


# ###############################################
#
#  Basic modifiers
#
set $mod Mod4
set $alt Mod1


# ###############################################
#
#  Configuration
#

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# focus does NOT follow mouse
focus_follows_mouse no


# ###############################################
#
#  Window borders
#
default_border pixel 2
default_floating_border pixel 2
hide_edge_borders smart


# ###############################################
#
#  Default colors
#

# class                 border  backgr. text    indicator child_border
client.focused          #3D607A #285577 #ffffff #2E9EF4   #49FF79
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #000000


# ###############################################
#
#  Font for window titles. Will also be used by the bar unless a different font
#  is used in the bar {} block below.
#
font pango:DejaVu Sans Mono Nerd Font Complete 10


# ###############################################
#
#  Monitors
#
set $mon-left DVI-I-1
set $mon-main DP-3
set $mon-right DP-2


# ###############################################
#
#  Workspaces
#
set $ws1 "1 üåç"
set $ws2 "2 üõ†Ô∏è"
set $ws3 "3 üîß"
set $ws4 "4 üîß"
set $ws5 "5 üîß"
set $ws6 "6 üîß"
set $ws7 "7 üîß"
set $ws8 "8 üîß"
set $ws9 "9 üîß"
set $ws10 "10 üïî"
set $ws11 "11 üèÅ"
set $ws12 "12 üîß"
set $ws13 "13 üîß"
set $ws14 "14 üîß"
set $ws15 "15 ‚öôÔ∏è"
set $ws16 "16 üîß"
set $ws17 "17 üñ•Ô∏è"
set $ws18 "18 üêí"
set $ws19 "19 ‚òéÔ∏è"
set $ws20 "20 üéß"

# workspace-monitor associations
workspace $ws1 output $mon-left

workspace $ws2 output $mon-main
workspace $ws3 output $mon-main
workspace $ws4 output $mon-main

workspace $ws5 output $mon-left
workspace $ws6 output $mon-left
